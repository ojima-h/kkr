<h1>Listing filters</h1>

<table>
  <tr>
    <th>Cond</th>
    <th>Manipulation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @filters.each do |filter| %>
  <tr>
    <td><%= filter.cond %></td>
    <td>
      <p><%= render :partial => "manipulations/list", :locals => {:manipulations => filter.manipulations} %></p>
    </td>
    <td><%= link_to 'Show', filter %></td>
    <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
    <td><%= link_to 'Destroy', filter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

