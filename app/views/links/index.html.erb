<h1>Listing links</h1>

<table>
  <tr>
    <th>tag name</th>
    <th>note content</th>
    <th>link value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.tag.name %></td>
    <td><%= link.note.content[0,9] %> ... </td>
    <td><%= link.value %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

